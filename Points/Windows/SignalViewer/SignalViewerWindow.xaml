<Window x:Class="Points.Windows.SignalViewer.SignalViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Points.Windows"
        xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SignalViewWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="SignalPropertyTemplate" TargetType="ContentControl">
            <StackPanel Orientation="Horizontal" Margin="0,2">
                <TextBlock  
                    FontWeight="Bold"
                    Margin="0,0,5,0">
                    <Run Text="{TemplateBinding Tag}"/>
                    <Run Text=": "/>
                </TextBlock>
                <ContentPresenter Content="{TemplateBinding Content}" 
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" >
            <ToolBar Band="1" BandIndex="1" Header="Сигналы">
                <Button Command="{Binding OpenOtherSignalThisWindowCommand}">
                    <TextBlock>Открыть другой сигнал</TextBlock>
                </Button>
                <Button Command="{Binding OpenOtherSignalNewWindowCommand}">
                    <TextBlock>Открыть другой сигнал в новом окне</TextBlock>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding PlotControl, Mode=OneTime}"/>
            <StackPanel Grid.Row="1" Grid.Column="0">
                <ListBox VerticalAlignment="Stretch" ItemsSource="{Binding Signals}" SelectedItem="{Binding SelectedSignal}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Signal.Name}" FontSize="24"/>
                                
                                <ContentControl 
                                    Template="{StaticResource SignalPropertyTemplate}"
                                    Tag="Количество точек"
                                    Content="{Binding Signal.TotalPoints}"/>

                                <ContentControl 
                                    Template="{StaticResource SignalPropertyTemplate}"
                                    Tag="Дата создания"
                                    Content="{Binding Signal.CreationDate}"/>

                                <ContentControl
                                    Template="{StaticResource SignalPropertyTemplate}"
                                    Tag="Временной шаг"
                                    Content="{Binding Signal.TimeStep}"/>

                                <CheckBox IsChecked="{Binding IsVisible}" Content="Показывать"/>
                                <Button 
                                    Command="{Binding DataContext.RemoveSignalViewCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}"
                                    Content="Выгрузить"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <ContentControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding SelectedSignal.Signal.Name}" FontSize="24" Margin="0 0 20 0"/>

                        <WrapPanel Grid.Column="1" Orientation="Vertical">
                            <ContentControl 
                                Template="{StaticResource SignalPropertyTemplate}"
                                Tag="Количество точек"
                                Content="{Binding SelectedSignal.Signal.TotalPoints}"/>

                            <ContentControl 
                                Template="{StaticResource SignalPropertyTemplate}"
                                Tag="Дата создания"
                                Content="{Binding SelectedSignal.Signal.CreationDate}"/>

                            <ContentControl
                                Template="{StaticResource SignalPropertyTemplate}"
                                Tag="Временной шаг"
                                Content="{Binding SelectedSignal.Signal.TimeStep}"/>
                        </WrapPanel>
                    </Grid>
                </Grid>
            </ContentControl>
        </Grid>
    </DockPanel>
</Window>
