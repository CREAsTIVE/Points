<Window x:Class="Points.Windows.SignalViewer.SignalViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Points.Windows"
        xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SignalViewWindow" Height="450" Width="800">

    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top" >
            <ToolBar Band="1" BandIndex="1" Header="Сигналы">
                <Button Command="{Binding OpenOtherSignalThisWindowCommand}">
                    <TextBlock>Открыть другой сигнал</TextBlock>
                </Button>
                <Button Command="{Binding OpenOtherSignalNewWindowCommand}">
                    <TextBlock>Открыть другой сигнал в новом окне</TextBlock>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <ContentControl Content="{Binding PlotControl, Mode=OneTime}"/>
    </DockPanel>
</Window>
