<Window x:Class="Points.Windows.SignalCreation.SignalCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Points.Windows.SignalCreation"
        mc:Ignorable="d"
        Title="Создание сигнала..." Height="auto" Width="400" Closed="OnClosed"
        SizeToContent="Height">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <local:SignalCreationFieldControl Caption="Название">
                <TextBox Text="{Binding DataContext.CurrentSignalModel.Name, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </local:SignalCreationFieldControl>
            <local:SignalCreationFieldControl Caption="Количество точек">
                <TextBox Text="{Binding DataContext.CurrentSignalModel.TotalPoints, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </local:SignalCreationFieldControl>
            <local:SignalCreationFieldControl Caption="Временной шаг">
                <TextBox Text="{Binding DataContext.CurrentSignalModel.TimeStep, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </local:SignalCreationFieldControl>
        </StackPanel>
        <Button 
            Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" 
            Content="Создать сигнал..." 
            Command="{Binding CreateSignalCommand}"/>
    </Grid>
</Window>
