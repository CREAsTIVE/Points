<UserControl x:Class="Points.Windows.SignalCreation.SignalCreationFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Points.Windows.SignalCreation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="0 0 10 0" Text="{Binding Caption, RelativeSource={RelativeSource AncestorType=local:SignalCreationFieldControl}, StringFormat='\{0\}: '}"/>
            <ContentPresenter Grid.Column="1" Content="{Binding InputControl, RelativeSource={RelativeSource AncestorType=local:SignalCreationFieldControl}}" />
        </Grid>
    </Border>
</UserControl>
