<Window x:Class="Points.Windows.SignalSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Points.Windows"
        mc:Ignorable="d"
        Title="Select Signal" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button 
            Command="{Binding OpenCreateSignalWindowCommand}" 
            Grid.Row="0" 
            VerticalAlignment="Center" HorizontalAlignment="Left" Padding="5">
            <TextBlock>Создать новый...</TextBlock>
        </Button>
        <ListBox Grid.Row="1" ItemsSource="{Binding Signals}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Name}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Создан: "/>
                            <TextBlock Text="{Binding Path=CreationTime}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Выбрать" Command="{Binding DataContext.SelectSignalCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                            <Button Content="Удалить" Command="{Binding DataContext.DeleteSignalCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
